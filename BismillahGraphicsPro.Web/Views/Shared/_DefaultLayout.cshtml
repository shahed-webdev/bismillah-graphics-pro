<!DOCTYPE html>

<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Barkantaj Group</title>
    <link rel="icon" type="image/png" href="/images/fabicon.ico">

    <!-- Font Awesome -->
    <link href="https://pro.fontawesome.com/releases/v5.8.2/css/all.css" rel="stylesheet" />
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <!-- MDB -->
    <link href="~/mdb/css/mdb-admin.min.css" rel="stylesheet" />
    <!-- Custom style -->
    <link href="~/css/custom-layout.css?v=1.0.0" rel="stylesheet" />
    <!-- printing -->
    <link href="~/css/print-page.css" rel="stylesheet" />
    <!-- Others page style -->
    @await RenderSectionAsync("Styles", false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark z-depth-0">
            <div class="container">
                <a class="navbar-brand py-0" href="/Home">
                    <img src="/images/logo.png" alt="Barkantaj Group" style="height: 45px;margin-right: 10px" />
                    Barkantaj Group
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapse-nav" aria-controls="collapse-nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="collapse-nav">
                    <ul id="left-menu" class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link waves-effect" href="#home-section">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link waves-effect" href="#about-section">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link waves-effect" href="#contact-section">Contact</a>
                        </li>
                        <partial name="_DefaultLoginPartial"/>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="page-footer font-small wow fadeIn mt-4">
        <div class="footer-copyright text-center py-3">
            © @DateTime.Now.Year Copyright:
            <a href="#">Barkantaj Group</a>
        </div>
    </footer>



    <!-- JQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script src="~/mdb/js/mdb-admin.min.js"></script>
    <!--notify js-->
    <script src="~/js/notify.min.js"></script>


    <!--others page js-->
    @await RenderSectionAsync("Scripts", false)

    <script>
        $(() => {
            new WOW().init();
        });

        //disable wheel in number type input
        document.addEventListener("wheel", () => {
            if (document.activeElement.type === "number")
                document.activeElement.blur();
        });
    </script>
</body>
</html>

